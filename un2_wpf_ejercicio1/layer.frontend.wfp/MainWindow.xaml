<Window x:Class="layer.frontend.wfp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:layer.frontend.wfp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="26,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="323"/>
        <Button x:Name="btnLoad" Content="Load" HorizontalAlignment="Left" Margin="379,23,0,0" VerticalAlignment="Top" Width="108" Height="23" Click="btnLoad_Click"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="26,120,0,0" VerticalAlignment="Top" Height="168" Width="368" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Archivo" Binding="{Binding}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
